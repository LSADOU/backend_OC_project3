# ===========================================
# Configuration de l'application Chatop
# ===========================================
# Copiez ce fichier en "application.properties" et remplissez les valeurs

# Nom de l'application
spring.application.name=chatop

# Port du serveur (le frontend attend le port 3001)
server.port=3001

# ===========================================
# Configuration de la base de données MySQL
# ===========================================
# URL de connexion à la base de données
# Remplacez localhost:3306 si votre serveur MySQL est sur un autre hôte/port
spring.datasource.url=jdbc:mysql://localhost:3306/rental_db?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true

# Driver MySQL (ne pas modifier)
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# Identifiants de connexion MySQL
# IMPORTANT: Remplacez par vos propres identifiants
spring.datasource.username=VOTRE_NOM_UTILISATEUR
spring.datasource.password=VOTRE_MOT_DE_PASSE

# ===========================================
# Configuration JPA / Hibernate
# ===========================================
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

# ===========================================
# Configuration de l'upload de fichiers
# ===========================================
spring.servlet.multipart.enabled=true
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB

# Répertoire de stockage des images uploadées
upload.path=static/uploads

# ===========================================
# URL de base de l'application (Utilisée pour générer les URLs des images)
# ===========================================
app.base-url=http://localhost:3001


logging.level.root=ERROR
logging.level.com.openclassrooms=INFO